<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.facturx</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invoicing_settings']" position="after">
                <h2>Factur-X Engine (Local)</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="facturx_engine_url"/>
                            <div class="text-muted">
                                Docker URL (e.g. http://localhost:8000)
                            </div>
                            <field name="facturx_engine_url"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="facturx_engine_key"/>
                            <div class="text-muted">
                                Pro License Key (Leave empty for Demo)
                            </div>
                            <field name="facturx_engine_key" password="True"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
